extends layout

block content
  if currentUser
    h1= title

    ul
      
      each pay in pay_list
        li
          a(href=pay.url) #{pay.id}
    
  else 
    h1 Log In
    a(href="/signup") SIGN UP
    form(action="/login" method="POST")
        div.form-group
            label(for='username') Username 
            input#username.form-control(type='text', placeholder='admin123' name='username' required='true')
            label(for='password') Password :
            input#password.form-control(type='password', name='password' required='true')
        div.form-group
        button.btn.btn-primary(type='submit') OK     
