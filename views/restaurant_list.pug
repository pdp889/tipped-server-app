extends layout

block content
  if currentUser
      h1= title

      ul
        
        each restaurant in restaurant_list
          li
            a(href=restaurant.url) #{restaurant.name}
            p  Zip :   #{restaurant.zip_code}
            p  Entree Price: #{restaurant.entree_price}
  else
    a(href='/auth/login') Login 
    a(href='auth/signup') Sign Up